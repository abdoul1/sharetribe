.feed-item.feed-request
  .feed-content
    %h2
      = link_to listed_listing_title(listing), listing
    - unless listing.description.blank?
      %small.feed-excerpt
        = "\"#{truncate_html(listing.description, :length => 120, :omission => '...')}\""
    %small.feed-listing-icons
      .feed-listing-icon
        %i.ss-pricetag.icon-with-text 
        .text-with-icon 22â‚¬ / hour
      .feed-listing-icon
        %i.ss-calendar.icon-with-text
        .text-with-icon 
          %time{datetime: "#{listing.created_at}"}= time_ago(listing.created_at)
      - if listing.comments.size > 0
        .feed-listing-icon
          %a{href: listing_path(listing) + "#comments"}
            %i.ss-chat.icon-with-text
            .text-with-icon= listing.comments.size
      - if current_user?(listing.author)
        .feed-listing-icon
          %a{href: edit_listing_path(listing)}
            .ss-draw.icon-with-text
            .text-with-icon= t("listings.edit_links.edit_#{listing.listing_type}")
        .feed-listing-icon
          %a{href: close_person_listing_path(@current_user, listing), data: { method: "put", remote: "true"}}
            .ss-lock.icon-with-text
            .text-with-icon= t("listings.edit_links.close_#{listing.listing_type}")
  .feed-image
    = image_tag listing.listing_images.first.image.url(:medium), :alt => listed_listing_title(listing)